{
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "prettier/react"],
  "env": {
    "browser": true,
    "es6": true,
    "jest": {
      "global": true
    },
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "plugins": ["react", "jest"],
  "rules": {
    "no-case-declarations": "off"
  }
}
